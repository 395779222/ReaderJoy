<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_mian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 	 android:background="@color/white" 
    tools:context="com.example.readerjoy.MainActivity" >

    <include 
        layout="@layout/layout_head" 
        android:id="@+id/header" />
 
   <RelativeLayout 
       android:layout_marginTop="25dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
       <ImageView 
           android:id="@+id/img_book"
           android:layout_width="105dp"
    	   android:layout_height="160dp"
    	   android:layout_marginLeft="25dp"
           />
       
    	<LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/img_book"
    		android:orientation="vertical"
    		android:layout_marginLeft="20dp"
    		>
       		   <TextView
			        android:id="@+id/book_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			      	android:maxLines="2"	
			        android:textColor="@color/dark"
			        android:textSize="18dp"
			        android:text="都破残穷 " />
       		   
       		   <TextView
			        android:id="@+id/book_author"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			      	android:maxLines="1"	
			         android:layout_marginTop="16dp"
			        android:textColor="#999999"
			        android:textSize="16dp"
			        android:text="[中国]天蚕土豆" />
       		   
       		    <TextView
			        android:id="@+id/book_money"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			      	android:maxLines="1"	
			         android:layout_marginTop="16dp"
			        android:textColor="#999999"
			        android:textSize="16dp"
			        android:text="价格：包月|5元/本" />
       		   
       		   <TextView
			        android:id="@+id/book_status"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			         android:layout_marginTop="10dp"
			        android:textColor="#999999"
			        android:textSize="16dp"
			        android:text="状态：完结" />
       		   
       		   <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			         android:layout_marginTop="10dp"
			        android:textColor="#999999"
			        android:textSize="16dp"
			        android:text="标签：都市 连载" />
       		   
       		   
   		</LinearLayout>
   </RelativeLayout>
   
	 <RelativeLayout 
        android:layout_marginTop="20dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">

	     <Button
	         android:id="@+id/btn_shop"
	         android:layout_width="135dp"
	         android:layout_height="35dp"
	         android:layout_alignParentTop="true"
	         android:layout_marginLeft="25dp"
	         android:layout_toRightOf="@+id/btn_reader"
	         android:background="@drawable/corners_btn_bg_selected"
	         android:text="购买"
	         android:textColor="@color/white" />

	     <Button
	         android:id="@+id/btn_reader"
	         android:layout_width="135dp"
	         android:layout_height="35dp"
	         android:layout_alignParentLeft="true"
	         android:layout_alignParentTop="true"
	         android:layout_marginLeft="28dp"
	         android:background="@drawable/corners_btn_bg"
	         android:text="试读"
	         android:textColor="@color/header" />

    </RelativeLayout>
    
    <RelativeLayout
	     android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
	    <RelativeLayout
		     android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerInParent="true">
	    
	    </RelativeLayout>
	  
	</RelativeLayout>
	
	<View
	      android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="@color/btn_bg_back"
	      android:layout_marginTop="20dp">  
	</View>
	
	<TextView
        android:id="@+id/book_introduction_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#555555"
        android:textSize="18dp"
        android:text="简介：" />
	
	<TextView
        android:id="@+id/book_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#555555"
        android:textSize="16dp"
        android:text="    打发第三方士大夫似的方式发生地方" />
	
</LinearLayout>
