<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
      	android:maxLines="2"	
        android:textColor="#555555"
        android:textSize="36dp"
        android:text="都破残穷 " />
    
     <TextView
        android:id="@+id/text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
      	android:maxLines="2"	
      	android:layout_gravity="center_horizontal"
        android:textColor="#555555"
        android:textSize="18dp"
        android:text="本书需要购买之后才可以继续阅读 " />
     
     
     
      <TextView
        android:id="@+id/text_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
      	android:maxLines="2"	
        android:textColor="#555555"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:text="感谢支持正版阅读" />
      
      
       <TextView
        android:id="@+id/text_msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
      	android:maxLines="2"	
        android:textColor="#555555"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:text="本书收录在包月之内，开通包月免费阅读" />
       
        <Button
	         android:id="@+id/btn_by"
	         android:layout_width="300dp"
	         android:layout_height="40dp"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="5dp"
	         android:background="@drawable/corners_btn_bg_selected"
	         android:text="开通包月"
	         android:textColor="@color/white" />
	 <TextView
        android:id="@+id/text_book_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
      	android:maxLines="2"	
        android:textColor="#555555"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:text="单本购买3元" />
	 
	  <Button
	         android:id="@+id/btn_shop"
	         android:layout_width="300dp"
	         android:layout_height="40dp"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="5dp"
	         android:background="@drawable/corners_btn_bg_selected"
	         android:text="购买"
	         android:textColor="@color/white" />
</LinearLayout>
